FROM node:18-alpine

WORKDIR /app

# Install build dependencies for native modules (WebSocket, bcrypt)
RUN apk add --no-cache python3 make g++

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 4000

# Development mode with hot reload
CMD ["npm", "run", "dev"]

